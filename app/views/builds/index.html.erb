<div class="container">

  <h1>Elite Dangerous Builds</h1>

  <table class="table table-inverse">
    <thead>
      <tr>
        <th>Id</th>
        <th>User</th>
        <th>Name</th>
        <th>Ship</th>
        <th>Url</th>
        <th>Comments</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @builds.each do |build| %>
        <tr>
          <td><%= build.id %></td>
          <td><%= build.user.email %></td>
          <td><%= build.name %></td>
          <td><%= build.ship %></td>
          <td><%= build.url %></td>
          <td><%= build.comments %></td>
          <td><%= link_to 'Show', build %></td>
          <% if build.user == current_user %>
            <td><%= link_to 'Edit', edit_build_path(build) %></td>
            <td><%= link_to 'Destroy', build, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Build', new_build_path %>
  <% end %>

</div>