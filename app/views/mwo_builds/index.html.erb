<div class="container">

  <h1>Mechwarrior Online Builds</h1>

  <table class="table table-inverse">
    <thead>
      <tr>
        <th>Id</th>
        <th>User</th>
        <th>Name</th>
        <th>Mech</th>
        <th>Url</th>
        <th>Comments</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mwo_builds.each do |mwo_build| %>
        <tr>
          <td><%= mwo_build.id %></td>
          <td><%= mwo_build.user.email %></td>
          <td><%= mwo_build.name %></td>
          <td><%= mwo_build.mech %></td>
          <td><%= mwo_build.url %></td>
          <td><%= mwo_build.comments %></td>
          <td><%= link_to 'Show', mwo_build %></td>
          <% if mwo_build.user == current_user %>
            <td><%= link_to 'Edit', edit_mwo_build_path(mwo_build) %></td>
            <td><%= link_to 'Destroy', mwo_build, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Build', new_mwo_build_path %>
  <% end %>

</div>